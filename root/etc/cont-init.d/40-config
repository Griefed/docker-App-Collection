#!/usr/bin/with-contenv bash

# Default configs
if [ ! -a /config/www/apps.json ]; then
  cp -f \
    /defaults/apps.json \
    /config/www/apps.json
  sed -i \
    "s/DOMAIN/$DOMAIN/g" \
      /config/www/apps.json
  sed -i \
    "s/PROTOCOL/$PROTOCOL/g" \
      /config/www/apps.json
fi

if [ ! -a /config/www/links.json ]; then
  cp -f \
    /defaults/links.json \
    /config/www/links.json
fi

# Crontabs
mkdir -p \
  /config/crontabs
if [ ! -a /config/crintabs/root ]; then
  cp /etc/crontabs/root \
    /config/crontabs/

# Permissions Stuffs
chown -R \
  abc:abc \
    /config/www
